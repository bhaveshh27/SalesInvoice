@model SaleInvoice

<h2>Are you sure you want to delete this invoice?</h2>
<div>
    <h4>Invoice No: @Model.SalesInvoiceNo</h4>
    <h4>Date: @Model.SalesInvoiceDate.ToShortDateString()</h4>
    <h4>Total Amount: @Model.TotalAmount</h4>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="SalesInvoiceNo" />
    <button type="submit">Yes, Delete</button>
    <a asp-action="Dashboard">Cancel</a>
</form>
